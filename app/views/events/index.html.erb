<p style="color: green"><%= notice %></p>

<h1>Accueil</h1>
<div class="row">
  <% @events.each do |event| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= event.title %></h5>
          <p class="card-text"><%= event.description %></p>
          <p class="card-text">Date: <%= event.start_date.strftime('%d/%m/%Y') %></p>
          <p class="card-text">Dur√©e: <%= event.duration %> heures</p>
          <p class="card-text">Prix: <%= number_to_currency(event.price) %></p>
          <p class="card-text">Lieu: <%= event.location %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
