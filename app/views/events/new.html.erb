<%= form_for @event do |f| %>
  <%= f.label :start_date %>
  <%= f.datetime_select :start_date %>

  <%= f.label :duration %>
  <%= f.number_field :duration %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :price %>
  <%= f.number_field :price %>

  <%= f.label :location %>
  <%= f.text_field :location %>

  <%= f.submit "Créer l'événement" %>
<% end %>
